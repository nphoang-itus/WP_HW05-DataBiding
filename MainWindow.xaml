<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DataBiding.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DataBiding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    xmlns:model="using:DataBiding.Model"
    xmlns:converter="using:DataBiding.View.Converter"
    
    Title="DataBiding" Activated="Window_Activated">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid RowSpacing="10" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho các nút bấm -->
            <RowDefinition Height="*"/>
            <!-- Hàng cho ListView, lấp đầy phần còn lại -->
        </Grid.RowDefinitions>

        <!-- Hàng 0: Các nút bấm -->
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Thêm điện thoại mới (Hard-code)" Click="AddButton_Click"/>
            <Button Content="Xóa điện thoại đầu danh sách (Hard-code)" Click="DeleteButton_Click"/>
            <Button Content="Cập nhật giá toàn danh sách (Hard-code)" Click="UpdatePriceButton_Click"/>
        </StackPanel>

        <!-- Hàng 1: ListView -->
        <ListView Grid.Row="1"
              ItemsSource="{x:Bind ViewModel.MobilePhones}"
              ItemTemplate="{StaticResource MobilePhoneItemTemplate}">
        </ListView>
    </Grid>
</Window>
